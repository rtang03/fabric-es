{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": false,
    "sourceMap": false,
    "types": ["node", "jest","@types/bytebuffer"],
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "rootDir": "src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ]
}
