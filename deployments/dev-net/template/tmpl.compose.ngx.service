  # For ORG${TMPL_PARAM_ID}
  nginx${TMPL_PARAM_ID}:
    image: $NGX_IMAGE
    container_name: nginx${TMPL_PARAM_ID}
    ports:
      - ${TMPL_PARAM_NGX_PORT}:443
    environment:
      - NGINX_PORT=443
      - AUTH_HOST=https://auth-server${TMPL_PARAM_ID}:8443
      - APP_HOST=http://ui-control${TMPL_PARAM_ID}:3000
      - GW_HOST=https://gw-${TMPL_PARAM_ORG_NAME}:4001
    volumes:
      - ${NGX_TEMPLATE}:/etc/nginx/templates/default.conf.template
    networks:
      - openplatform
