root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
# max_line_length = 120
tab_width = 2
trim_trailing_whitespace = true

[{*.cjs,*.js}]
indent_size = 2
tab_width = 2

[{*.ts,*.ats}]
indent_size = 2
tab_width = 2

[{.analysis_options,*.yml,*.yaml}]
indent_size = 2

[{.eslintrc,.prettierrc,.babelrc,jest.config,.stylelintrc,*.bowerrc,*.jsb3,*.jsb2,*.json}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
