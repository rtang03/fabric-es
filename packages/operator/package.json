{
  "name": "@espresso/operator",
  "version": "1.0.0",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "description": "Network operator",
  "repository": {
    "type": "git",
    "url": "git://github.com/rtang03/open-platform-dlt.git"
  },
  "keywords": [
    "hyperledger"
  ],
  "author": "Ross Tang",
  "homepage": "https://github.com/rtang03/open-platform-dlt",
  "bugs": {
    "url": "https://github.com/rtang03/open-platform-dlt/issues"
  },
  "publishConfig": { "registry": "https://npm.pkg.github.com/" },
  "scripts": {
    "build": "yarn clean && tsc",
    "tsc:prod": "yarn clean && tsc -p ./tsconfig.prod.json",
    "build-chaincode": "cd ../chaincode && yarn build",
    "pack:lib": "yarn build:cleanup && concurrently \"npm:cp:*\"",
    "build:cleanup": "rimraf ../../.build/packages/operator && mkdir -p ../../.build/packages/operator",
    "cp:package.json": "cp ./package.json ../../.build/packages/operator/",
    "cp:dist": "cp -R ./dist ../../.build/packages/operator/",
    "prepare-asset": "rimraf assets && mkdir -p ./assets/client-certs/hfc-kvs/org1",
    "typedoc": "typedoc --excludeNotExported --theme markdown --exclude \"**/*+(.test|constants).ts\" --out docs src/index.ts",
    "scenario:eventstore": "npm run prepare-asset && ts-node src/scenario/deploy2Orgs2Peers.ts",
    "scenario:privatedata": "ts-node src/scenario/install-instantiate-privatedata.ts",
    "scenario:eventstore-upgrade": "ts-node src/scenario/upgrade-eventstore-cc.ts",
    "scenario:privatedata-upgrade": "ts-node src/scenario/upgrade-privatedata-cc.ts",
    "scenario:post-install-test": "ts-node src/scenario/post-install-test.ts",
    "clean": "rimraf dist",
    "lint": "eslint --max-warnings 10 'src/**/*.{js,ts}' --fix"
  },
  "engineStrict": true,
  "dependencies": {
    "dotenv": "^8.1.0",
    "fabric-client": "^1.4.4",
    "fabric-contract-api": "^1.4.4",
    "fabric-network": "^1.4.4",
    "fs-extra": "^8.1.0",
    "js-yaml": "^3.13.1",
    "listr": "^0.14.3",
    "listr-silent-renderer": "^1.1.1",
    "listr-update-renderer": "^0.5.0",
    "listr-verbose-renderer": "^0.6.0",
    "lodash": "^4.17.15",
    "prettyjson": "^1.2.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bytebuffer": "^5.0.40",
    "@types/dotenv": "^6.1.1",
    "@types/concurrently":  "^4.1.0",
    "@types/jest": "^24.0.18",
    "@types/js-yaml": "^3.12.1",
    "@types/lodash": "^4.14.138",
    "@types/node": "^8.10.59",
    "concurrently": "^5.0.0",
    "execa": "3.4.0",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typedoc": "^0.15.6",
    "typedoc-plugin-markdown": "^2.2.16",
    "typescript": "^3.7.2"
  }
}
