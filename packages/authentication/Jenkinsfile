pipeline {
    agent {
        label 'master'
        docker {
            image 'build:5000/node8-build' 
            args '-p 3000:3000'
            registryUrl 'https://build:5000'
            registryCredentialsId 'docker-registry-login'
        }
    }
    stages {
        stage('Build') { 
            steps {
                sh 'yarn install --ignore-engines'
                sh 'yarn build:authentication'
            }
        }
    }
}