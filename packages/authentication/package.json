{
  "name": "@espresso/authentication",
  "version": "1.0.0",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "start": "npm run build && node ./dist/app.js",
    "dev-auth": "nodemon --exec ts-node src/app.ts",
    "build": "yarn clean && tsc",
    "tsc:prod": "yarn clean && tsc -p ./tsconfig.prod.json",
    "pack:lib": "yarn build:cleanup && concurrently \"npm:cp:*\"",
    "build:cleanup": "rimraf ../../.build/packages/authentication && mkdir -p ../../.build/packages/authentication",
    "cp:package.json": "cp ./package.json ../../.build/packages/authentication/",
    "cp:env": "cp ./.env.prod ../../.build/packages/authentication/.env",
    "cp:dist": "cp -R ./dist ../../.build/packages/authentication/",
    "cp:views": "cp -R ./views ../../.build/packages/authentication/",
    "cp:public": "cp -R ./public ../../.build/packages/authentication/",
    "cp:processes": "cp ./processes.yaml ../../.build/packages/authentication/",
    "clean": "rimraf dist",
    "test:authorization_code": "jest --forceExit --detectOpenHandles authorization_code.test",
    "test:client_credentials": "jest --forceExit --detectOpenHandles client_credentials.test",
    "test:password": "jest --forceExit --detectOpenHandles password.test",
    "test:authenticate": "jest --forceExit --detectOpenHandles authenticate.test",
    "test:client_app": "jest --forceExit --detectOpenHandles client_app.test",
    "typedoc": "typedoc --excludeNotExported --theme markdown --exclude \"**/*+(.test|constants).ts\" --out docs src/index.ts",
    "lint": "eslint --max-warnings 10 'src/**/*.{js,ts}'"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "private": true,
  "engineStrict": true,
  "dependencies": {
    "apollo-server-express": "^2.9.7",
    "bcrypt": "^3.0.6",
    "cookie-parser": "^1.4.4",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "graphql": "^14.5.8",
    "http-status": "^1.4.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "morgan": "^1.9.1",
    "oauth2-server-typescript": "^5.0.0-dev.3",
    "pg": "^7.12.1",
    "pug": "^2.0.4",
    "reflect-metadata": "^0.1.13",
    "stoppable": "^1.1.0",
    "type-graphql": "^0.17.5",
    "typeorm": "^0.2.20",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.17.1",
    "@types/concurrently": "^4.1.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/js-yaml": "^3.12.1",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/lodash": "^4.14.138",
    "@types/node": "^12.7.5",
    "@types/stoppable": "^1.1.0",
    "@types/supertest": "^2.0.8",
    "concurrently": "^5.0.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "pgtools": "^0.3.0",
    "prettier": "^1.19.1",
    "prettyjson": "^1.2.1",
    "rimraf": "^3.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typedoc": "^0.15.6",
    "typedoc-plugin-markdown": "^2.2.16",
    "typescript": "^3.7.2"
  },
  "nohoist": [
    "class-validator"
  ]
}
