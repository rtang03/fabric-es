---
name: {{network.compose-project-name}}_{{network.name}}-{{orgs.peer.1.name}}
version: 1.0.0

client:
  organization: {{orgs.peer.1.name}}
  credentialStore:
    path: ./assets/client-certs/hfc-kvs/{{orgs.peer.1.domain}}
    cryptoStore:
      path: ./assets/client-certs/hfc-kvs/{{orgs.peer.1.domain}}
  connection:
    timeout:
      peer:
        endorser: '300'

channels:
  eventstore:
    orderers:
      - {{orgs.orderer.orderers.endpoints.0.-}}{{network.host-delimiter}}{{orgs.orderer.domain}}
    peers:
      {{#orgs.peer.1.peers.endpoints}}
      {{-}}{{network.host-delimiter}}{{orgs.peer.1.domain}}:
        endorsingPeer: true
        chaincodeQuery: true
        ledgerQuery: true
        eventSource: true
      {{/orgs.peer.1.peers.endpoints}}
    chaincodes:
      - eventstore:1.0

organizations:
  {{orgs.peer.1.id}}:
    mspid: {{orgs.peer.1.id}}
    peers:
      {{#orgs.peer.1.peers.endpoints}}
      - {{-}}{{network.host-delimiter}}{{orgs.peer.1.domain}}
      {{/orgs.peer.1.peers.endpoints}}
    certificateAuthorities:
      - {{orgs.peer.1.ca.host}}{{network.host-delimiter}}{{orgs.peer.1.domain}}
    adminPrivateKey:
      path: ../../network2/config/{{{artifacts.local}}}/{{{artifacts.crypto}}}{{#artifacts.crypto}}/{{/artifacts.crypto}}{{orgs.peer.1.domain}}/admin/msp/keystore/key.pem
    signedCert:
      path: ../../network2/config/{{{artifacts.local}}}/{{{artifacts.crypto}}}{{#artifacts.crypto}}/{{/artifacts.crypto}}{{orgs.peer.1.domain}}/admin/msp/signcerts/cert.pem
    client:
      path: ./connection/peer0org1.yaml

orderers:
  {{orgs.orderer.orderers.endpoints.0.-}}{{network.host-delimiter}}{{orgs.orderer.domain}}:
    url: grpcs://localhost:{{orgs.orderer.orderers.endpoints.0.ext-port}}
    grpcOptions:
      ssl-target-name-override: {{orgs.orderer.orderers.endpoints.0.-}}{{network.host-delimiter}}{{orgs.orderer.domain}}
    #      grpc-max-send-message-length: 4000
    tlsCACerts:
      path: ../../network2/config/{{{artifacts.local}}}/{{{artifacts.crypto}}}{{#artifacts.crypto}}/{{/artifacts.crypto}}{{orgs.orderer.domain}}/{{orgs.orderer.orderers.endpoints.0.-}}/tls-msp/tlscacerts/tls-0-0-0-0-{{orgs.tls.ca.port}}.pem

peers:
  {{#orgs.peer.1.peers.endpoints}}
  {{-}}{{network.host-delimiter}}{{orgs.peer.1.domain}}:
    url: grpcs://localhost:{{port}}
    eventUrl: grpcs://localhost:{{eventhub-port}}
    tlsCACerts:
      path: ../../network2/config/{{{artifacts.local}}}/{{{artifacts.crypto}}}{{#artifacts.crypto}}/{{/artifacts.crypto}}{{orgs.peer.1.domain}}/{{-}}/tls-msp/tlscacerts/tls-0-0-0-0-{{orgs.tls.ca.port}}.pem
    grpcOptions:
      ssl-target-name-override: {{-}}{{network.host-delimiter}}{{orgs.peer.1.domain}}
  {{/orgs.peer.1.peers.endpoints}}

certificateAuthorities:
  {{orgs.peer.1.ca.host}}{{network.host-delimiter}}{{orgs.peer.1.domain}}:
    url: https://localhost:{{orgs.peer.1.ca.port}}
    caName: {{orgs.peer.1.ca.host}}{{network.host-delimiter}}{{orgs.peer.1.domain}}
    tlsCACerts:
      path: ../../network2/config/{{{artifacts.local}}}/{{{artifacts.crypto}}}{{#artifacts.crypto}}/{{/artifacts.crypto}}{{orgs.peer.1.domain}}/msp/tlscacerts/tls-ca-cert.pem
    registrar:
      - enrollId: {{orgs.peer.1.ca.admin}}
        enrollSecret: {{orgs.peer.1.ca.adminpw}}
    httpOptions:
      verify: false
