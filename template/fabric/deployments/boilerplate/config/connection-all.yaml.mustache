---
name: {{network.compose-project-name}}_{{network.name}}-all
version: 1.0.0

channels:
  {{network.peer-channels.0}}:
    orderers:
      - {{orgs.orderer.orderers.endpoints.0.-}}{{network.host-delimiter}}{{orgs.orderer.domain}}
    peers:
      {{#orgs.peer}}
      {{#peers.endpoints}}
      {{-}}{{network.host-delimiter}}{{domain}}:
        endorsingPeer: true
        chaincodeQuery: true
        ledgerQuery: true
        eventSource: true
      {{/peers.endpoints}}
      {{/orgs.peer}}
    chaincodes:
      - eventstore:1.0

organizations:
  {{#orgs.peer}}
  {{id}}:
    mspid: {{id}}
    peers:
      {{#peers.endpoints}}
      - {{-}}{{network.host-delimiter}}{{domain}}
      {{/peers.endpoints}}
    certificateAuthorities:
      - {{ca.host}}{{network.host-delimiter}}{{domain}}
    adminPrivateKey:
      path: ../../deployments/boilerplate/config/{{{artifacts.local}}}/{{{artifacts.crypto}}}{{#artifacts.crypto}}/{{/artifacts.crypto}}{{{admin-cert-path}}}/msp/keystore/key.pem
    signedCert:
      path: ../../deployments/boilerplate/config/{{{artifacts.local}}}/{{{artifacts.crypto}}}{{#artifacts.crypto}}/{{/artifacts.crypto}}{{{admin-cert-path}}}/msp/signcerts/cert.pem
  {{/orgs.peer}}

orderers:
  {{orgs.orderer.orderers.endpoints.0.-}}{{network.host-delimiter}}{{orgs.orderer.domain}}:
    url: grpcs://localhost:{{orgs.orderer.orderers.endpoints.0.ext-port}}
    grpcOptions:
      ssl-target-name-override: {{orgs.orderer.orderers.endpoints.0.-}}{{network.host-delimiter}}{{orgs.orderer.domain}}
    #      grpc-max-send-message-length: 4000
    tlsCACerts:
      path: ../../deployments/boilerplate/config/{{{artifacts.local}}}/{{{artifacts.crypto}}}{{#artifacts.crypto}}/{{/artifacts.crypto}}{{{orgs.orderer.orderers.endpoints.0.cert-path}}}/tls-msp/tlscacerts/tls-0-0-0-0-{{orgs.tls.ca.port}}.pem

peers:
  {{#orgs.peer}}
  {{#peers.endpoints}}
  {{-}}{{network.host-delimiter}}{{domain}}:
    url: grpcs://localhost:{{port}}
    eventUrl: grpcs://localhost:{{eventhub-port}}
    tlsCACerts:
      path: ../../deployments/boilerplate/config/{{{artifacts.local}}}/{{{artifacts.crypto}}}{{#artifacts.crypto}}/{{/artifacts.crypto}}{{{cert-path}}}/tls-msp/tlscacerts/tls-0-0-0-0-{{orgs.tls.ca.port}}.pem
    grpcOptions:
      ssl-target-name-override: {{-}}{{network.host-delimiter}}{{domain}}
  {{/peers.endpoints}}
  {{/orgs.peer}}

certificateAuthorities:
  {{#orgs.peer}}
  {{ca.host}}{{network.host-delimiter}}{{domain}}:
    url: https://localhost:{{ca.port}}
    caName: {{ca.host}}{{network.host-delimiter}}{{domain}}
    tlsCACerts:
      path: ../../deployments/boilerplate/config/{{{artifacts.local}}}/{{{artifacts.crypto}}}{{#artifacts.crypto}}/{{/artifacts.crypto}}{{{peers.endpoints.0.cert-path}}}/assets/tls-ca/tls-ca-cert.pem
    registrar:
      - enrollId: {{ca.admin}}
        enrollSecret: {{ca.adminpw}}
    httpOptions:
      verify: false
  {{/orgs.peer}}