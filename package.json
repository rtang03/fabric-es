{
  "name": "open-platform-dlt",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "scripts": {
    "cp:root": "rimraf .build && mkdir -p ./.build && cp ./package.json .build && cp yarn.lock .build ",
    "tsc:auth": "lerna run tsc:prod --scope=@espresso/authentication",
    "tsc:lib": "lerna run tsc:prod --scope={@espresso/fabric-cqrs,@espresso/operator,@espresso/gw-node}",
    "tsc:gw-org1": "lerna run tsc:prod --scope={@espresso/model-*,@espresso/gw-org1}",
    "tsc:gw-org2": "lerna run tsc:prod --scope={@espresso/model-*,@espresso/gw-org2}",
    "pack:auth": "yarn cp:root && lerna run pack:lib --scope=@espresso/authentication",
    "pack:lib": "yarn cp:root && lerna run pack:lib --scope={@espresso/authentication,@espresso/fabric-cqrs,@espresso/operator,@espresso/gw-node}",
    "pack:gw-dev-net:org1": "lerna run pack:gw-dev-net --scope={@espresso/authentication,@espresso/model-*,@espresso/gw-org1}",
    "pack:gw-dev-net:org2": "lerna run pack:gw-dev-net --scope={@espresso/authentication,@espresso/model-*,@espresso/gw-org2}",
    "build:auth": "yarn tsc:auth && yarn pack:auth",
    "build:gw-dev-net:org1": "yarn tsc:auth && yarn tsc:lib && yarn tsc:gw-org1 && yarn pack:lib && yarn pack:gw-dev-net:org1",
    "build:gw-dev-net:org2": "yarn tsc:auth && yarn tsc:lib && yarn tsc:gw-org2 && yarn pack:lib && yarn pack:gw-dev-net:org2",
    "unit-test": "lerna run unit-test:lib --scope={@espresso/authentication,@espresso/chaincode,@espresso/fabric-cqrs}",
    "lint:lib": "lerna run lint --scope={@espresso/authentication,@espresso/chaincode,@espresso/fabric-cqrs,@espresso/gw-node,@espresso/operator}",
    "lint:app": "lerna run lint --scope={@espresso/gw-org*,@espresso/model-*}",
    "publish": "lerna publish from-git",
    "boilerplate": "yarn cp:root && lerna run boilerplate --scope={@espresso/gw-org*,@espresso/model-*}",
    "typedoc": "lerna run typedoc --scope={@espresso/authentication,@espresso/chaincode,@espresso/fabric-cqrs,@espresso/gw-node,@espresso/operator}"
  },
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "devDependencies": {
    "@typescript-eslint/parser": "^2.21.0",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.21.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-prefer-arrow": "^1.1.7",
    "lerna": "^3.20.2",
    "json-to-pretty-yaml": "^1.2.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "typescript": "^3.7.2"
  },
  "prettier": {
    "eslintIntegration": true,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "requirePragma": false,
    "insertPragma": false,
    "printWidth": 120
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com/"
  }
}
