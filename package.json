{
  "name": "open-platform-dlt",
  "version": "1.0.0",
  "scripts": {
    "cp:root": "rimraf .build && mkdir -p ./.build && cp ./package.json .build && cp yarn.lock .build ",
    "tsc:auth": "lerna run tsc:prod --scope=@espresso/authentication",
    "tsc:lib": "lerna run tsc:prod --scope={@espresso/fabric-cqrs,@espresso/operator,@espresso/gw-node}",
    "tsc:gw-org1": "lerna run tsc:prod --scope={@espresso/model-common,@espresso/model-loan-private,@espresso/model-loan,@espresso/gw-org1}",
    "tsc:gw-org2": "lerna run tsc:prod --scope={@espresso/model-common,@espresso/model-loan-private,@espresso/model-loan,@espresso/gw-org2}",
    "pack:auth": "yarn cp:root && lerna run pack:lib --scope=@espresso/authentication",
    "pack:lib": "yarn cp:root && lerna run pack:lib --scope={@espresso/authentication,@espresso/fabric-cqrs,@espresso/operator,@espresso/gw-node}",
    "pack:gw-dev-net:org1": "lerna run pack:gw-dev-net --scope={@espresso/authentication,@espresso/model-common,@espresso/model-loan-private,@espresso/model-loan,@espresso/gw-org1}",
    "pack:gw-dev-net:org2": "lerna run pack:gw-dev-net --scope={@espresso/authentication,@espresso/model-common,@espresso/model-loan-private,@espresso/model-loan,@espresso/gw-org2}",
    "build:auth": "yarn tsc:auth && yarn pack:auth",
    "build:gw-dev-net:org1": "yarn tsc:auth && yarn tsc:lib && yarn tsc:gw-org1 && yarn pack:lib && yarn pack:gw-dev-net:org1",
    "build:gw-dev-net:org2": "yarn tsc:auth && yarn tsc:lib && yarn tsc:gw-org2 && yarn pack:lib && yarn pack:gw-dev-net:org2",
    "unit-test:lib": "lerna run unit-test:lib --scope=@espresso/chaincode"
  },
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "devDependencies": {
    "lerna": "^3.20.2",
    "json-to-pretty-yaml": "^1.2.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.7.2"
  },
  "prettier": {
    "eslintIntegration": false,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "requirePragma": false,
    "insertPragma": false
  }
}
