{
  "name": "fabric-es",
  "version": "0.5.14",
  "license": "BSD-3-Clause-Clear",
  "scripts": {
    "cp:root": "rimraf .build && mkdir -p ./.build && cp ./package.json .build",
    "tsc:auth": "lerna run tsc:prod --scope=@fabric-es/authentication",
    "tsc:lib": "lerna run tsc:prod --scope={@fabric-es/fabric-cqrs,@fabric-es/operator,@fabric-es/gateway-lib}",
    "tsc:gw-org1": "lerna run tsc:prod --scope={@fabric-es/model-*,@fabric-es/gw-org1}",
    "tsc:gw-org2": "lerna run tsc:prod --scope={@fabric-es/model-*,@fabric-es/gw-org2}",
    "tsc:all": "lerna run build",
    "pack:auth": "yarn cp:root && lerna run pack:lib --scope=@fabric-es/authentication",
    "pack:lib": "yarn cp:root && lerna run pack:lib --scope={@fabric-es/authentication,@fabric-es/fabric-cqrs,@fabric-es/operator,@fabric-es/gateway-lib}",
    "pack:gw-dev-net:org1": "lerna run pack:gw-dev-net --scope={@fabric-es/authentication,@fabric-es/model-*,@fabric-es/gw-org1}",
    "pack:gw-dev-net:org2": "lerna run pack:gw-dev-net --scope={@fabric-es/authentication,@fabric-es/model-*,@fabric-es/gw-org2}",
    "build:auth": "yarn tsc:auth && yarn pack:auth",
    "build:gw-dev-net:org1": "yarn tsc:auth && yarn tsc:lib && yarn tsc:gw-org1 && yarn pack:lib && yarn pack:gw-dev-net:org1",
    "build:gw-dev-net:org2": "yarn tsc:auth && yarn tsc:lib && yarn tsc:gw-org2 && yarn pack:lib && yarn pack:gw-dev-net:org2",
    "build:tester": "yarn cp:root && lerna run pack --scope=@fabric-es/tester",
    "bootstrap:fab": "cd ./deployments/dev-net && ./cleanup.sh && ./bootstrap.2org.sh ",
    "build-run-test:fab": "cd ./deployments/dev-net && ./build-run.3.2org.auth-gw-tester.sh ",
    "shutdown:fab": "cd ./deployments/dev-net && ./shutdown-cleanup.sh",
    "unit-int-test": "yarn build-run-test:fab && yarn lerna run unit-test:fab --stream --scope={@fabric-es/authentication,@fabric-es/chaincode,@fabric-es/fabric-cqrs,@fabric-es/model-*} && yarn shutdown:fab",
    "unit-test": "yarn bootstrap:fab && yarn lerna run unit-test:fab --stream --scope={@fabric-es/authentication,@fabric-es/chaincode,@fabric-es/fabric-cqrs,@fabric-es/model-*} && yarn shutdown:fab",
    "unit-test:no_grpc": "yarn bootstrap:fab && yarn lerna run unit-test:fab --stream --scope={@fabric-es/authentication,@fabric-es/chaincode,@fabric-es/model-*} && yarn shutdown:fab",
    "lint:lib": "lerna run lint --stream --scope={@fabric-es/authentication,@fabric-es/chaincode,@fabric-es/fabric-cqrs,@fabric-es/gateway-lib,@fabric-es/operator}",
    "lint:app": "lerna run lint --stream --scope={@fabric-es/gw-org*,@fabric-es/model-*}",
    "publish:lib": "lerna run publish:gh:fabric-es --scope={@fabric-es/authentication,@fabric-es/chaincode,@fabric-es/fabric-cqrs,@fabric-es/gateway-lib,@fabric-es/operator}",
    "version:patch": "lerna version patch",
    "boilerplate": "yarn cp:root && lerna run boilerplate --scope={@fabric-es/gw-org*,@fabric-es/model-*}",
    "typedoc": "lerna run typedoc --scope={@fabric-es/authentication,@fabric-es/chaincode,@fabric-es/fabric-cqrs,@fabric-es/gateway-lib,@fabric-es/operator}"
  },
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "devDependencies": {
    "@typescript-eslint/parser": "^2.21.0",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.21.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-prefer-arrow": "^1.1.7",
    "lerna": "^3.20.2",
    "json-to-pretty-yaml": "^1.2.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "typescript": "^3.7.2"
  },
  "prettier": {
    "eslintIntegration": true,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "requirePragma": false,
    "insertPragma": false,
    "printWidth": 120
  }
}
